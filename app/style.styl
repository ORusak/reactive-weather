:local(.weather_container)
  margin 50px auto
  font-size 20pt
  width 500px

  padding 10px
  text-align left
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  border-width: 3px
  border-radius 3px
  border-style double
  border-color black
  overflow hidden

@media screen and (max-width: 550px)
  :local(.weather_container)
    width auto
    margin 5px 0px

@media screen and (max-width: 400px)
  :local(.weather_container)
    font-size 13pt

:local(.tab_container)
  clear left

:local(.tabs)
  width 100%
  overflow hidden

:local(.tab)
  float left
  width 33%
  cursor pointer
  padding: 2px
  margin-right: 1px
  border 1px solid white
  border-bottom 1px solid black

  & i
    margin-right: 3px

:local(.tab_cities)
  width 25%

:local(.active)
  border 1px solid black
  border-radius 3px 3px 0 0

:local(.hide_tab)
  display none

/*field*/
:local(.field)
  margin 10px 0
  width 100%

:local(.field__label)
  display block
  width 100%
  font-weight bolder

:local(.field__control)
  margin 3px 0 10px 0
  width 100%